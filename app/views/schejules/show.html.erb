<h3>スケジュール詳細</h3>
 
    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @schejule.title %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td><%= @schejule.startdate %></td>
      </tr>
      <tr>
        <th>投稿日時</th>
        <td><%= @schejule.created_at %></td>
      </tr>
      <tr>
        <th>終日</th>
        <td>
            <% if @schejule.allday == true %>
            ○
            <% else %>
            <% end %>
        </td>
      </tr>
      <tr>
        <th>スケジュールメモ</th>
        <td><%= @schejule.memo %></td>
      </tr>
    </table>
 
    <div>
      <ul>
        <li><%= link_to "ユーザー情報一覧に戻る", :schejules %></li>
      </ul>
    </div>